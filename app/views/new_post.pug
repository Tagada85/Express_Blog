extends layout
block content
	h1 New post Page
	form(action='/new_post' method="POST")
		.form-group
			label(for="title") Blog Title
			input(type="text" id="title" name="title")
		.form-group
			label(for='author') Author
			input(type="text" id="author" name='author')
		.form-group
			label(for='postBody') Blog Post
			textarea(type="text" id="postBody" name='postBody')
		button(type="submit").btn.btn-success Submit New post